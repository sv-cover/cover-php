{% extends '@layout/layout.twig' %}

{% block title __('Geen toegang') ~ ' :: ' ~ parent() %}

{% block content %}
<h1>{{ __('Geen toegang') }}</h1>
<div class="messageBox">
	<section class="error-section">
		<p>{{ exception.message }}</p>
	</section>
	{% if not global.auth.logged_in %}
	<div class="call-to-action-or-block">
		<a href="{{ link('sessions.login', referer=global.server.REQUEST_URI) }}" data-placement-selector="modal" data-partial-selector="#login-form" class="button login">{{ __('Log in') }}</a>
		<span class="separator">{{ __('of') }}</span>
		<a href="lidworden.php" class="button register">{{ __('Word lid van Cover') }}</a>
	</div>
	{% endif %}
</div>
{% endblock %}