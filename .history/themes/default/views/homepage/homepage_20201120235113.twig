{% extends '@layout/layout.twig' %}

{% block page %}
<section>
	{% set editable = global.models.Editable.get_iter_from_title('Startpagina') %}
	<article class="container is-content-optimized">
		<div class="level">
		{# Delete the title #}
		    {% if user_can_update editable %}
		        <div class="buttons level-right">
		            <a href="{{ link('editable.update', editable=editable) }}" class="button">
		                <span class="icon is-small">
		                    <i class="fas fa-pencil-alt" aria-hidden="true"></i>
		                </span>
		                <span>
		                    {{ __('Modify introduction') }}
		                </span>
		            </a>
		        </div>
		    {% endif %}
		</div>
	</article>
</section>

{# Become a member banner#}

<section>
	{% if global.auth.logged_in == 1 %}

	{# <div id="mySidebar" class="sidebar"> </div> #}

	<div id="main" class="become-member-sign">
		<h3 class="is-size-5 writing">Become a member</h3>
		
		{# <div class="line"></div>
		{# <div class="child">
			<span class="arrow--l-r right" id="spani">
			<span></span><span></span><span></span>
			<span></span><span></span>
			</span>
		</div> #}
	</div>
	{% endif %}
</section>

<section class="half-half">
	<section class="sectionMargin">
		<div class="containerMinimised is-centered columns is-gapless"> 

			<div class="calendar column is-one-third">
				{{ include('@theme/homepage/_agenda.twig') }}
			</div>

			<section class="hero is-medium has-carousel column">
			
				 <div id="carousel-demo" class="hero-carousel has-cover-bg event-header">
				 	{% set agenda_items = view.layout.agenda %}
					{% for item in agenda_items|slice(0, 3) %}
					<div class='has-background is-active'>
						<div class="overlay is-bottom">
							<div class="date boxed-title-wrapper">
								<span class="boxed-title has-text-weight-normal is-size-6 is-size-7-mobile">
									{{ item.van|date('F d') }}
								</span>
							</div>
							<div class="name boxed-title-wrapper">
								<h1 class="boxed-title is-size-4 is-size-5-mobile">
									{{ item.kop }}
								</h1>
							</div>
						</div>
						<img class="is-background" src="{{ item.get_image(1000) }}"
								data-preview="{{ item.get_image(400) }}" alt="" />
					</div>
					{% endfor %}
  				</div>
				<div class="hero-head"></div>
				<div class="hero-body"></div>
				<div class="hero-foot"></div>
			</section>
		</div>
		
		<div class="containerMinimised is-centered">
				<h1 class="title">{{ editable.get_title }}</h1>
		</div>
		<div class="">
			<article class="message is-dark">
				<div class="message-body">
					{{ editable.locale_content|parse_markup }}
				</div>
			</article>
		</div>
	</section>
</section>
{# Carrousel for the announcements #}

<section class = "section">

	<div class="container columns is-centered">
		
		<div class="column is-one-third-desktop is-one-quarter-widescreen is-one-fifth-fullhd">
			{{ include('@theme/homepage/_poll.twig') }}
		</div>
		<div class="column is-content-optimized is-half">
			{{ include('@theme/announcements/announcements.twig', {
