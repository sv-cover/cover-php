{% set _content = block('content') %}
{% set _footer = block('footer') %}

{% if _content is not empty %}
	<article class="card is-calendar-box">

		<header class="card-header is-calendar">
			<h2 class="card-header-title is-calendar-title"> {% block title %}{% endblock %}
				</h2>
			</header>
			<div class="card-content" id="menu_{% block name %}{% endblock %}"> {% block content %}{% endblock %}
				</div>
				{% set _footer = block('footer') %}
				{% if _footer is not empty %}
					<footer class="card-footer">
						{{ _footer|raw }}
					</footer>
				{% endif %}
            </article>
{% endif %}

<article class="event">
    <div class="columns">
        <div class="columns"
    </div>
</article>