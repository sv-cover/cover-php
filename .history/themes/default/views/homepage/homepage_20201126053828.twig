{% extends '@layout/layout.twig' %}

{% block page %}
<section>
	{% set editable = global.models.Editable.get_iter_from_title('Startpagina') %}
	<article class="container is-content-optimized">
		<div class="level">
		{# Delete the title #}
		    {% if user_can_update editable %}
		        <div class="buttons level-right">
		            <a href="{{ link('editable.update', editable=editable) }}" class="button">
		                <span class="icon is-small">
		                    <i class="fas fa-pencil-alt" aria-hidden="true"></i>
		                </span>
		                <span>
		                    {{ __('Modify introduction') }}
		                </span>
		            </a>
		        </div>
		    {% endif %}
		</div>
	</article>
</section> 

{# Become a member banner for mobile#}
<section>
	{% if global.auth.logged_in == 0 %}
		<a href="https://www.svcover.nl/lidworden.php?utm_source=svcover.nl&utm_medium=banner&utm_campaign=member%20registration">
			<div class="button become-member-mobile is-hidden-tablet">
				<h3 class="is-size-5 writing-mobile">Become a member</h3>
			</div>	
		</a>	
	{% endif %}
</section>

{# Become a member banner for full screen#}
<section>
	{% if global.auth.logged_in == 0 %}
	{# If we want to extend the banner #}
	{# <div id="mySidebar" class="sidebar"></div> #}
		<a href="https://www.svcover.nl/lidworden.php?utm_source=svcover.nl&utm_medium=banner&utm_campaign=member%20registration">
			<div id="main" class=" button become-member-sign-fullscreen is-hidden-mobile">
				<h3 class="is-size-5 writing">Become a member</h3>
			</div>
		</a>
		{# Arrow #}
		{# <div class="line"></div>
		{# <div class="child">
			<span class="arrow--l-r right" id="spani">
			<span></span><span></span><span></span>
			<span></span><span></span>
			</span>
		</div> #}
	{% endif %}
</section>

{# Calendar + Carousels #}
<section class="">
	<section class="">
		<div class="containerMinimised is-centered columns is-gapless reverse-row-order"> 
		{# Calendar #}
			<div class="column is-one-third-fullhd is-one-third-widescreen is-one-third-desktop is-full-width">
				{{ include('@theme/homepage/_agenda.twig') }}
			</div>

		{# Carousel #}
			<section class="hero has-carousel column container-fancy">
				 <div id="carousel-demo" class="hero-carousel carousel event-header">
				 	{% set agenda_items = view.layout.agenda %}
					{% for item in agenda_items|slice(0, 4) %}
					<div class="is-active cover-thumbnail is-3by1 is-full-height">
						<div class="overlay is-bottom-overlay is-top-overlay">
							<div class="date boxed-title-wrapper">
								<span class="boxed-title has-text-weight-normal is-size-6 is-size-7-touch">
									{{ item.van|date('F d') }}
								</span>
							</div>
							<div class="name boxed-title-wrapper">
								<h1 class="boxed-title is-size-4 is-size-5-touch">
									{{ item.kop }}
								</h1>
							</div>
						</div>
						<figure class="image">
							<picture>
								<source srcset="{{ item.get_image(1000) }} 1000w, {{ item.get_image(2000) }} 2x">
								<source srcset="{{ item.get_image(600) }} 600w, {{ item.get_image(1200) }} 2x">
								<source srcset="{{ item.get_image(400) }} 400w, {{ item.get_image(800) }} 2x">
								<img class="is-background" src="{{ item.get_image(1000) }}"
								data-preview="{{ item.get_image(400) }}" alt="" />
							</picture>
						</figure>
					</div>
					{% endfor %}
  				</div>
				<div class="hero-head"></div>
				<div class="hero-body"></div>
				<div class="hero-foot"></div>
			</section>
		</div>
	</section>
</section>

{# Information about association #}
<p class="marquee">
<span class="is-scroll-text"> <span class="is-bold-red"></span>Cover is the study association for Artificial Intelligence and Computing Science &nbsp;</span>

</p>



{# Announcements #}
<section class = "section">
	<div class="container columns is-centered">
		<div class="column is-one-fifth-desktop is-one-fifth-widescreen is-one-fifth-fullhd is-one-quarter-tablet">
			<div class="is-sticky">
				{{ include('@theme/homepage/_poll.twig') }}
			</div>
		</div>
		<div class="column is-content-optimized">
			{{ include('@theme/announcements/announcements.twig', {
				'controller': global.controllers.announcements,
				'model': global.models.Announcement,
				'policy': global.policies.Announcement,
				'iters': global.models.Announcement.get_latest()
			}) }}
		</div>
	</div>
</section>

