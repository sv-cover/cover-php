{% extends '@layout/layout.twig' %}

{% block title __('Delete calendar event') ~ ' â€“ ' ~ parent() %}

{% block content %}
<h1 class="title">{{ __('Delete event') }}</h1>
{{ form_start(form, {
	action: path('calendar', {view: 'delete', agenda_id: iter.id}),
}) }}
	<div class="field">
		<p>{{ __('Are you sure you want to delete the event <em>%s</em>?')|format(iter.kop|e('html'))|raw }}</p>
	</div>
	<div class="field">
		<div class="control buttons">
			{{ form_widget(form.submit, {
				label: __('Delete event'),
				is_primary: false,
				attr: {class: 'is-danger'},
			}) }}
			<a href="{{ path('calendar', {agenda_id: iter.id}) }}" class="button">{{ __('Back to event') }}</a>
		</div>
	</div>
{{ form_end(form) }}
{% endblock %}