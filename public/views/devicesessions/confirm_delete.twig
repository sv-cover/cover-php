{% extends '@layout/layout.twig' %}

{% block title __('Delete device session') ~ ' â€“ ' ~ parent() %}

{% block content %}
<div class="modal is-static">
    <div class="modal-card">
        <header class="modal-card-head">
            <p class="modal-card-title">{{ __('Delete device session') }}</p>
        </header>
        <section class="modal-card-body">
            <form id="delete-device-session-form" method="post" action="{{ path('device_sessions.delete', {id: iter.id}) }}">
                {{ html_nonce('delete', iter) }}
                <p>
                    {{ __('Are you sure you want to remove this device session?') }}
                    <em>{{ iter.device_name|default(__('Unnamed device')) }}</em> at <em>{{ iter.ip_address }}</em>
                </p>
            </form>
        </section>
        <footer class="modal-card-foot">
            <a href="{{ path('device_sessions') }}" class="button" data-dismiss="modal">{{ __('Cancel') }}</a>
            <button type="submit" class="button is-danger" form="delete-device-session-form">{{ __('Delete session') }}</button>
        </footer>
    </div>
</div>
{% endblock %}
