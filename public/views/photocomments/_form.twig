<form class="media photo-comment" id="comment-form" name="freactie" action="{{ iter.has_id ? path('photos.comments.single', {comment_view: 'update', comment_id: iter.id, photo: photo.id, book: book.id}) : path('photos.comments', {comment_view: 'create', photo: photo.id, book: book.id}) }}" method="post">
	{% if iter.has_id %}
		{{ html_nonce('update', iter) }}
	{% else %}
		{{ html_nonce('create', iter) }}
	{% endif %}
	<figure class="media-left">
		<p class="image avatar">
			{% if iter.has_id %}
				<img class="is-rounded" src="{{ path('profile_picture', {lid_id: iter.author.id, format: 'square', width: 128}) }}" alt="Photo of {{ iter.author|personal_full_name }}">
			{% else %}
				<img class="is-rounded" src="{{ path('profile_picture', {lid_id: global.identity.member.id, format: 'square', width: 128}) }}" alt="Photo of {{ global.identity.member|personal_full_name }}">
			{% endif %}
		</p>
	</figure>
	<div class="media-content">
		<div class="field">
			<label for="reactie" class="label is-sr-only">{{__('Comment')}}</label>
			<p class="control">
				{{ html_textarea_field('reactie', iter.data,
					errors=errors,
					placeholder=__('Type your comment hereâ€¦'),
					rows=3) }}
			</p>
		</div>
		<div class="field">
			<button type="submit" class="button is-primary">{{ iter.has_id ? __('Modify comment') : __('Post comment') }}</button>
			{% if iter.has_id %}
			<a href="{{ controller.path('read', iter) }}"
					class="button">
				{{ __('Return to photo') }}
			</a>
			{% endif %}
		</div>
	</div>
</form>
