{% extends '@layout/layout.twig' %}

{% block content %}
<div class="modal is-static">
	<div class="modal-card">
		<header class="modal-card-head">
			<p class="modal-card-title">{{ __('Delete comment') }}</p>
		</header>
		<section class="modal-card-body">
			<form id="delete-comment-form" method="post" action="{{ controller.path('delete', iter) }}">
				{{ html_nonce('delete', iter) }}
				<div class="field">
					<p>{{ __('Are you sure you want to delete the comment posted by <em>%s</em>?')|format(iter.auteur|personal_full_name|e('html'))|raw }}</p>
				</div>
			</form>
		</section>
		<footer class="modal-card-foot">
			<a href="{{ controller.path('read', iter) }}" class="button" data-dismiss="modal">{{ __('Return to photo') }}</a>
			<button type="submit" class="button is-danger" form="delete-comment-form">{{ __('Delete comment') }}</button>
		</footer>
	</div>
</div>
{% endblock %}