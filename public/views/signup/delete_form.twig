{% extends '@layout/layout.twig' %}

{% block title __('Delete form') ~ ' â€“ ' ~ parent() %}

{% block content %}

<div class="modal is-static">
    <div class="modal-card">
        <header class="modal-card-head">
            <p class="modal-card-title">{{ __('Delete form') }}</p>
        </header>
        <section class="modal-card-body">
            {{ form_start(form, {
                id: 'delete-form-form',
                action: path('signup', {view: 'delete_form', form: iter.id}),
            }) }}
                {% set submit_button = form_widget(form.submit, {
                    label: __('Delete form'),
                    is_primary: false,
                    attr: {form: 'delete-form-form', class: 'is-danger'},
                }) %}
                <div class="field content">
                    <p>{{ __('Are you sure you want to delete this sign-up form?') }}</p>
                    <p class="has-text-danger">{{ __('This will also delete all registrations. There is no way to undo this action.') }}</p>
                </div>
            {{ form_end(form) }}
        </section>
        <footer class="modal-card-foot">
            <a href="{{ path('signup', {view: 'update_form', form: iter.id}) }}" class="button" data-dismiss="modal">{{ __('Back to form') }}</a>
            {{ submit_button|raw }}
        </footer>
    </div>
</div>
{% endblock %}