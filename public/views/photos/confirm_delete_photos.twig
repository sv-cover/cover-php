{% extends '@layout/layout.twig' %}

{% from '@theme/photos/_photos.twig' import gallery %}

{% block title __('Delete photos') ~ ' â€“ ' ~ parent() %}

{% block content %}
<div class="modal is-static">
	<div class="modal-card">
		<header class="modal-card-head">
			<p class="modal-card-title">{{ __('Delete photos') }}</p>
		</header>
		<section class="modal-card-body">
            {{ form_start(form, {id: 'delete-photos-form'}) }}
                {% set submit_button = form_widget(form.submit, {color: 'danger', attr: {form: 'delete-photos-form'}}) %}
				<div class="field">
					<p>{{ __('Are you sure you want to delete %d photos from the <em>%s</em> photo book?')|format(photos|length, book.titel|e)|raw }}</p>
				</div>
				{# {{ gallery(photos, {'book': book}) }} #}
            {{ form_end(form) }}
		</section>
		<footer class="modal-card-foot">
			<a href="{{ path('photos', {book: book.id}) }}" class="button" data-dismiss="modal">{{ __('Cancel') }}</a>
            {{ submit_button|raw }}
		</footer>
	</div>
</div>
{% endblock %}