{% extends '@layout/layout.twig' %}

{% block title __('Update Photo') ~ ' â€“ ' ~ parent() %}

{% block content %}
<div class="modal is-static">
	<div class="modal-card">
		<header class="modal-card-head">
			<p class="modal-card-title">{{ __('Update photo') }}</p>
		</header>
		<section class="modal-card-body">
			<form id="update-photo-form" method="post" action="{{ path('photos.photo', {view: 'update', book: book.id, photo: photo.id}) }}">
				{{ html_nonce('update', photo) }}
				<div class="field">
					{{ html_label(__('Title'), 'beschrijving', errors=errors) }}
					<div class="control">
						{{ html_input_text('beschrijving', photo, errors=errors) }}
					</div>
				</div>
			</form>
		</section>
		<footer class="modal-card-foot">
			<a href="{{ path('photos.photo', {book: book.id, photo: photo.id}) }}" class="button" data-dismiss="modal">{{ __('Return to photo') }}</a>
			<button type="submit" class="button is-primary" form="update-photo-form">{{ __('Update photo') }}</button>
		</footer>
	</div>
</div>
{% endblock %}