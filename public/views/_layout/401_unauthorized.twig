{% extends '@layout/layout.twig' %}

{% block title __('No access') ~ ' â€“ ' ~ parent() %}

{% block content %}
<section class="block">
	<h1 class="title">{{ __('No access') }}</h1>
	<div class="content">
		{% block error_message %}
			<p>{{ exception.message|default(__('Access to this part of the website is restricted.')) }}</p>
		{% endblock %}
		{% if not global.auth.logged_in %}
			<p>
				<a href="{{ login_path(global.server.REQUEST_URI) }}" class="button is-primary is-fullwidth">{{ __('Log in') }}</a>
				<div class="divider is-fullwidth">{{ __('or') }}</div>
				<a href="{{ path('join') }}" class="button is-fullwidth">{{ __('Become a member') }}</a>
			</p>
			<p>
				<a href="{{ path('homepage') }}" class="button is-text is-fullwidth">{{ __('Go to the homepage') }}</a>
			</p>
		{% endif %}
	</div>
</section>
{% endblock %}
