{% extends '@layout/layout.twig' %}

{% block title (iter.has_id ? __('Bestuur wijzigen') : __('Nieuwe oud-bestuur toevoegen')) ~ ' :: ' ~ parent() %}

{% block content %}
<h1>{{ iter.has_id ? __('Bestuur wijzigen') : __('Nieuwe oud-bestuur toevoegen') }}</h1>
<div class="messageBox">
	<form method="post" action="{{ view.get_form_action(iter) }}" class="vertical-form">
		<div>
			{{ html_label(__('Bestuursnaam'), 'naam', errors=errors, required=true) }}
			{{ html_input_text('naam', iter, required='required', placeholder='Board XXII') }}
		</div>

		<div>
			{{ html_label(__('Sorteernaam'), 'login', errors=errors, required=true) }}
			{{ html_input_text('login', iter, required='required', placeholder='bestuur22') }}
			<p>{{ __('Deze waarde is nergens zichtbaar maar wordt alleen gebruikt om de sorteervolgorde van de besturen goed te krijgen.') }}</p>
		</div>		

		<div>
			<button type="submit" class="button">{{ iter.has_id ? __('Wijzig bestuur') : __('Voeg bestuur toe') }}</button>
			<a href="{{ controller.link_to_index() }}">{{ __('Terug naar de oud-besturen') }}</a>
		</div>
	</form>
</div>
{% endblock %}