{% extends 'tab.twig' %}

{% set active_tab = 'personal' %}

{% block tab_content %}
<article>
	<h2 class="title is-4">{{ __('Personal data') }}</h2>
	<form action="profiel.php?lid={{ iter.id }}&amp;view=personal" method="post">
		{{ html_nonce('personal', iter) }}
		{% for field in view.personal_fields %}
			<div class="field">
				{{ html_label(field.label, field.name, errors=errors) }}
				{% if field.read_only is not defined %}
					<div class="control">
						{{ html_input_text(field.name, iter, errors=errors) }}
					</div>
				{% else %}
				<div class="control">
					{% if field.name == 'geboortedatum' %}
						{{ iter[field.name]|date('d-m-Y') }}
					{% else %}
						{{ iter[field.name] }}
					{% endif %}
				</div>
				{% endif %}
			</div>
		{% endfor %}
	
		<div class="field">
			<div class="control buttons">
				<button type="submit" class="button is-primary">{{ __('Save') }}</button>
			</div>
		</div>

		<div class="field">
			{{ __("Do you want to change personal information that you can't change here? That's probably still possible! Just contact the secretary.") }}
		</div>
	</form>
</article>
{% endblock %}