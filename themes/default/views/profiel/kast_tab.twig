{% extends 'tab.twig' %}

{% set active_tab = 'kast' %}

{% block tab_content %}
<article>
	<h2>{{ __('KAST') }}</h2>
	<h4>{{ __('Credit balans') }}</h4>
	<em>{{ __N('%d credit', '%d credits', status.credits) }}</em>
</article>

<article>
	<p>{{ __('Your ten most recent purchases are listed here.') }}</p>
	<table class="full-width-table">
		<thead>
			<tr>
				<th>{{ __('Product') }}</th>
				<th class="numeric">{{ __('Price') }}</th>
				<th class="timestamp">{{ __('Date of purchase') }}</th>
			</tr>
		</thead>
		<tbody>
			{% for purchase in history %}
			<tr class="{{ purchase.admin ? 'purchase-admin' : '' }} {{ not purchase.valid ? 'purchase-reverted' : '' }}"
				title="{{ purchase.admin ? __('Admin-kruisje') : '' }} {{ not purchase.valid ? __('Ongedaan') : '' }}">
				<td>{{ purchase.product_description }}</td>
				<td class="numeric">{{ '%d'|format(purchase.price) }}</td>
				<td class="timestamp">{{ purchase.date|date_relative }}</td>
			</tr>
			{% endfor %}
		</tbody>
	</table>
</article>
{% endblock %}