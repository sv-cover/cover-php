{% extends 'tab.twig' %}

{% set active_tab = 'kast' %}

{% block tab_content %}
<section class="block">
	<h2 class="title is-4">{{ __('Consumptions in K.A.S.T.') }}</h2>
	{% if not status.active %}
		<div class="notification is-danger">
			<button class="delete"></button>
			<div class="level is-mobile">
				<div class="level-left">
					<div class="level-item">
						<span class="icon is-medium" aria-hidden="true">
							<i class="fas fa-exclamation-circle fa-2x"></i>
						</span>
					</div>
					<div class="level-item">
						{{ __('Your account is inactive!') }}
					</div>
				</div>
			</div>
		</div>
	{% endif %}

	<h3 class="title is-5">{{ __('Balance') }}</h3>
	<p {% if status.balance < 0 %}class="has-text-danger"{% endif %}>
		€ {{ (status.balance/100) |number_format(2) }}
	</p>
</section>

<section class="block content">
	<h3 class="title is-5">{{ __('Recent Purchases') }}</h3>
	<p>{{ __('Your twenty most recent purchases') }}</p>
	<table class="table is-fullwidth is-hoverable is-aligned">
		<thead>
			<tr>
				<th class="is-truncated">{{ __('Product') }}</th>
				<th class="has-text-right is-nowrap">{{ __('Price') }}</th>
				<th class="has-text-right is-nowrap">{{ __('Date') }}</th>
			</tr>
		</thead>
		<tbody>
			{% for purchase in history %}
				{% if purchase.class_name == 'Purchase' %}
					<tr class="{{ purchase.admin ? 'purchase-admin' : '' }} {{ not purchase.valid ? 'purchase-reverted' : '' }}"
						title="{{ purchase.admin ? __('Admin Purchase') : '' }} {{ not purchase.valid ? __('Undone') : '' }}">
						<td class="is-truncated">{{ purchase.product_name }}</td>
						<td class="has-text-right is-nowrap">€ -{{ (purchase.amount_euros/100) |number_format(2) }}</td>
						<td class="has-text-right is-nowrap">{{ purchase.timestamp|date_relative }}</td>
					</tr>
				{% elseif purchase.class_name == 'TopUp' %}
					<tr class="{{ purchase.admin ? 'purchase-admin' : '' }} {{ not purchase.valid ? 'purchase-reverted' : '' }}"
						title="{{ purchase.admin ? __('Admin Top Up') : '' }} {{ not purchase.valid ? __('Undone') : '' }}">
						<td class="is-truncated">{{ purchase.purchase_category_name }}</td>
						<td class="has-text-right is-nowrap">€ {{ (purchase.amount_euros/100) |number_format(2) }}</td>
						<td class="has-text-right is-nowrap">{{ purchase.timestamp|date_relative }}</td>
					</tr>
				{% endif %}
			{% endfor %}
		</tbody>
	</table>
</section>
{% endblock %}