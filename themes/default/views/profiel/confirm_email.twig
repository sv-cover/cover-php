{% extends '@layout/layout.twig' %}

{% block title __('Confirm email address') ~ ' :: ' ~ parent() %}

{% block content %}
	<h1>{{ __('Confirm email address') }}</h1>
	<div class="messageBox">
		{% if success %}
			<p>{{ __('Finished! Your email address has been confirmed and updated!') }}</p>
		{% else %}
			<p>{{ __('Oh dear, this link is no longer valid.') }}</p>
			<p>{{ __('It might be the case that you’ve already confirmed your email address. Try to log in with your new address. It that doesn’t work, try to use your previous address once again. Did you forget your password? You might want to try both your previous and current email address when asking for password recovery.') }}</p>
			<p>{{ __('Still having trouble? Send an email to %s and we’ll help you.')|e|format(html_email(global.config.email_support))|raw }}</p>
		{% endif %}
		<footer class="alt-section">
			<a href="/">{{ __('Back to the homepage') }}</a>
		</footer>
	</div>
{% endblock %}