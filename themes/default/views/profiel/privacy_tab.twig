{% extends 'tab.twig' %}

{% set active_tab = 'privacy' %}

{% block tab_content %}
<section class="aligned-list-section">
	<h2>{{ __('Privacy instellingen') }}</h2>
	<p>{{ __('Je privacy instellingen geven aan wie welke informatie mag zien.') }}</p>

	<form action="profiel.php?lid={{ iter.id }}&amp;view=privacy" method="post">
		{{ html_nonce('privacy' ~ iter.id) }}
		<table class="privacy">
			<thead>
				<tr>
					<td></td>
					<th>{{ __('Niemand') }}</th>
					<th>{{ __('Leden') }}</th>
					<th>{{ __('Iedereen') }}</th>
				</tr>
			</thead>
			<tbody>
				{% for field in fields %}
				<tr>
					<th>{{ field.label }}</th>
					<td>{{ html_input_radio(field.name, field.data, constant('DataModelMember::VISIBLE_TO_NONE')) }}</td>
					<td>{{ html_input_radio(field.name, field.data, constant('DataModelMember::VISIBLE_TO_MEMBERS')) }}</td>
					<td>{{ html_input_radio(field.name, field.data, constant('DataModelMember::VISIBLE_TO_EVERYONE')) }}</td>
				</tr>
				{% endfor %}
			</tbody>
		</table>

		<button type="submit" class="button">{{ __('Opslaan') }}</button>
	</form>
</section>
{% endblock %}