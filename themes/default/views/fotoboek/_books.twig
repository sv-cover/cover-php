{% if books|length > 0 %}
<div class = "clearfix photobooks">
{% for book in books %}
	<div id="book_{{ book.id }}" class="photobook {{ book.read_status }}">
		<a href="fotoboek.php?book={{ book.id }}">
			<img src="{{ link_static('images/book.png') }}" class="book_thumb">
			<span class="photo-book-title">
				{{ book.titel }}
				{{ view.summary(book)|raw }}
			</span>
		</a>
		{% if user_can_update book %}
		<span class="controls">
			<a href="fotoboek.php?view=update_book&amp;book={{ book.id }}" title="{{ __('Modify photobook') }}">
				<i class="fa fa-pencil-square-o"></i>
			</a>
			{% endif %}
			{% if user_can_delete book %}
			<a href="fotoboek.php?view=delete_book&amp;book={{ book.id }}" title="{{ __('Delete photobook') }}" data-placement-selector="modal" data-partial-selector=".delete-photobook-form">
				<i class="fa fa-trash-o"></i>
			</a>
			{% endif %}
			{% if user_can_update book and book.visibility is not same as(null) %}
				{% if book.visibility == constant('DataModelPhotobook::VISIBILITY_PUBLIC') %}
				<span class="visibility visibility-public" title="{{ __('Public') }}">{{ __('Public') }}</span>
				{% elseif book.visibility == constant('DataModelPhotobook::VISIBILITY_MEMBERS') %}
				<span class="visibility visibility-members" title="{{ __('Only logged in members') }}">{{ __('Only logged in members') }}</span>
				{% elseif book.visibility == constant('DataModelPhotobook::VISIBILITY_ACTIVE_MEMBERS') %}
				<span class="visibility visibility-active-members" title="{{ __('Only logged in active members') }}">{{ __('Only logged in active members') }}</span>
				{% elseif book.visibility == constant('DataModelPhotobook::VISIBILITY_PHOTOCEE') %}
				<span class="visibility visibility-photocee" title="{{ __('Only logged in members of the PhotoCee') }}">{{ __('Only logged in members of the PhotoCee') }}</span>
				{% endif %}
			{% endif %}
		</span>
	</div>
{% endfor %}
</div>
{% endif %}
