<div class="bar_sep">{{ __("Random photos") }}</div>
<ul class="selection-of-photos">
	{% for photo in view.random_photos(3) %}
	<li>
		<a id="random_photo_{{ photo.id|e('html_attr') }}" href="fotoboek.php?photo={{ photo.id|e('url') }}">
			<img src="{{ photo.get_url(0, 400)|e('html_attr') }}" {{ 'width="%d" height="%d"'|vformat(photo.get_scaled_size(null, 150))|raw }}>
			<span class="photo-caption">
				<span class="photo-book-title">{{ photo.fotoboek_titel }}</span>
				<span class="photo-book-year">{{ photo.fotoboek_jaar }}</span>
			</span>
		</a>
	</li>
	{% endfor %}
</ul>