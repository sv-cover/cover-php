{% extends '@layout/layout_without_menu.twig' %}

{% block title __('Agenda') ~ ' :: ' ~ parent() %}

{% block content %}
	<h1>{{ __('Abonneer je op de agenda') }}</h1>
	<div class="messageBox">
		<p>{{ __('Voeg jouw Cover-agenda toe aan jouw eigen agenda, zodat je altijd kan zien wat er te doen is.') }}</p>
		<ul class="call-to-action">
			<li><a href="https://calendar.google.com/calendar/render?cid={{'webcal://www.svcover.nl/agenda.php?format=webcal&session_id='|url_encode }}{{ global.models.Session.getForApplication(global.identity.get('id'), 'calendar').get('session_id') }}" target="_blank">{{ __('Voeg toe aan mijn %s')|format('Google Calendar') }}</a></li>
			<li><a href="http://calendar.live.com/calendar/calendar.aspx?rru=addsubscription&amp;url={{'webcal://www.svcover.nl/agenda.php?format=webcal%26session_id='|url_encode }}{{ global.models.Session.getForApplication(global.identity.get('id'), 'calendar').session_id }}" target="_blank">{{ __('Voeg toe aan mijn %s')|format('Outlook.com') }}</a></li>
			<li><a href="webcal://www.svcover.nl/agenda.php?format=webcal&amp;session_id={{ global.models.Session.getForApplication(global.identity.get('id'), 'calendar').session_id }}" target="_blank">{{ __('Voeg toe aan mijn %s')|format('iCloud/other') }}</a></li>
		</ul>
	</div>
{% endblock %}