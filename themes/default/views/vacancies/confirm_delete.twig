{% extends '@layout/layout.twig' %}

{% block title __('Delete vacancy') ~ ' â€“ ' ~ parent() %}

{% block content %}
<div class="modal is-static">
    <div class="modal-card">
        <form method="post" action="{{ controller.link_to_delete(iter) }}">
            {{ html_nonce('delete', iter) }}
            <header class="modal-card-head">
                <p class="modal-card-title">{{ __('Delete vacancy') }}</p>
            </header>
            <section class="modal-card-body">
                <p>
                    {{ __('Are you sure you want to remove this vacancy?') }}
                    <em>{{ iter.title }}</em>
                </p>
            </section>
            <footer class="modal-card-foot">
                <a href="{{ controller.link_to_read(iter) }}" class="button" data-dismiss="modal">{{ __('Cancel') }}</a>
                <button type="submit" class="button is-danger">{{ __('Delete vacancy') }}</button>
            </footer>
        </form>
    </div>
</div>
{% endblock %}
