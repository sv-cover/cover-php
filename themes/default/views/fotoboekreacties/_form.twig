<form class="comment-form" id="comment-form" name="freactie" action="{{ iter.has_id ? controller.link_to_update(iter) : controller.link_to_create }}" method="post" data-partial-selector=".photo-comments" data-placement-selector=".photo-comments">
	{% if iter.has_id %}
		{{ html_nonce('update', iter) }}
	{% else %}
		{{ html_nonce('create', iter) }}
	{% endif %}
	<div>
		{{ html_textarea_field('reactie', iter.data,
			errors=errors,
			placeholder=__('Type your comment hereâ€¦'),
			rows=3) }}
	</div>
	
	<div>
		<button type="submit" class="button">{{ iter.has_id ? __('Modify comment') : __('Post comment') }}</button>
		{% if iter.has_id %}
		<a href="{{ controller.link_to_read(iter) }}"
			data-partial-selector="#comment{{ iter.id }}"
			data-placement-selector=".replyBox">{{ __('Return to photo') }}</a>
		{% endif %}
	</div>
</form>
