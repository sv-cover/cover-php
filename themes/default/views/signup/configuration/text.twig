<div class="field-type-textfield vertical-form">
	<h3 class="field-type">{{ __('Text field') }}</h3>
	<fieldset>
		<legend>Appearance</legend>
		<div>
			{{ html_label('Label for textfield', 'label', errors=errors, for='field-' ~ name ~ '-label') }}
			{{ html_input_text('label', data, errors=errors, id='field-' ~ name ~ '-label') }}
		</div>
	</fieldset>
	<fieldset>
		<legend>Field type</legend>
		<div class="radio">
			<label>
				{{ html_input_radio('multiline', data, '0', errors=errors, id='field-' ~ name ~ '-multiline-0') }}
				{{ __('Single line of text') }}
			</label>
		</div>
		<div class="radio">
			<label>
				{{ html_input_radio('multiline', data, '1', errors=errors, id='field-' ~ name ~ '-multiline-1') }}
				{{ __('Multiple lines of text') }}
			</label>
		</div>
	</fieldset>
	<fieldset>
		<legend>Required</legend>
		<div class="checkbox">
			<label>
				{{ html_input_checkbox('required', data, errors=errors, id='field-' ~ name ~ '-required') }}
				{{__('Filling in this field is mandatory') }}
			</label>
		</div>
	</fieldset>
</div>