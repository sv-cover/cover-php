<div class="field-type-textfield vertical-form">
	<fieldset>
		<legend>Appearance</legend>
		<div>
			{{ html_label('Label for textfield', 'label', errors=errors) }}
			{{ html_input_text('label', data, errors=errors) }}
		</div>
	</fieldset>
	<fieldset>
		<legend>Required</legend>
		<div>
			{{ html_input_checkbox('required', data, errors=errors) }}
			{{ html_label('Filling in this field is mandatory', 'required', errors=errors) }}
		</div>
	</fieldset>
</div>