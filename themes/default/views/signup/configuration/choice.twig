<div class="field-type-choice vertical-form">
	<h3 class="field-type">{{ __('Multiple choice question') }}</h3>
	<fieldset>
		<legend>Appearance</legend>
		<div>
			{{ html_label('Label above the options', 'description', errors=errors, id='field-' ~ name ~ '-description') }}
			{{ html_input_text('description', data, errors=errors, for='field-' ~ name ~ '-description') }}
		</div>
	</fieldset>
	<fieldset>
		<legend>Options</legend>
		<ol data-growing-list>
			{% for option in data.options %}
				<li>
					<span class="drag-handle"></span>
					{{ html_input_text('options[]', data, field='options['~ loop.index0 ~']', id='field-' ~ name ~ '-option-' ~ loop.index0) }}
				</li>
			{% endfor %}
			<li data-template>
				<span class="drag-handle"></span>
				<input type="text" name="options[]">
			</li>
		</ol>
		<div class="checkbox">
			<label>
				{{ html_input_checkbox('allow_multiple', data, errors=errors, id='field-' ~ name ~ '-allow-multiple') }}
				{{ __('Allow multiple options to be picked') }}
			</label>
		</div>
	</fieldset>
	<fieldset>
		<legend>Required</legend>
		<div class="checkbox">
			<label>
				{{ html_input_checkbox('required', data, errors=errors, id='field-' ~ name ~ '-required') }}
				{{ __('Picking an option is mandatory') }}
			</label>
		</div>
	</fieldset>
</div>