<div class="field-type-choice vertical-form">
	<fieldset>
		<legend>Appearance</legend>
		<div>
			{{ html_label('Label above the options', 'description', errors=errors) }}
			{{ html_input_text('description', data, errors=errors) }}
		</div>
	</fieldset>
	<fieldset>
		<legend>Options</legend>
		<ul data-growing-list>
			{% for option in data.options %}
				<li>{{ html_input_text('options[]', data, field='options['~ loop.index0 ~']') }}</li>
			{% endfor %}
			<li data-template>
				<input type="text" name="options[]">
			</li>
		</ul>
		<div>
			{{ html_input_checkbox('allow_multiple', data, errors=errors) }}
			{{ html_label('Allow multiple options to be picked', 'allow_multiple', errors=errors) }}
		</div>
	</fieldset>
	<fieldset>
		<legend>Required</legend>
		<div>
			{{ html_input_checkbox('required', data, errors=errors) }}
			{{ html_label('Picking an option is mandatory', 'required', errors=errors) }}
		</div>
	</fieldset>
</div>