<div class="field-type-name vertical-form">
	<h3 class="field-type">{{ __('Full name') }}</h3>
	<fieldset>
		<legend>Required</legend>
		<div class="checkbox">
			<label>
				{{ html_input_checkbox('required', data, errors=errors, id='field-' ~ name ~ '-required') }}
				{{ __('Filling in the name is mandatory') }}
			</label>
		</div>
	</fieldset>
	<fieldset>
		<legend>Autofill</legend>
		<div class="checkbox">
			<label>
				{{ html_input_checkbox('autofill', data, errors=errors, id='field-' ~ name ~ '-autofill') }}
				{{ __('Autofill this form with member data (disable if people are not supposed to fill in their own information)') }}
			</label>
		</div>
	</fieldset>
</div>