{% extends '@layout/layout.twig' %}

{% block title __('Remove message') ~ ' :: ' ~ parent() %}

{% block content %}
<h1>{{ __('Remove message') }}</h1>
<div class="messageBox">
	<form method="post" action="forum.php?view=delete&amp;message={{ iter.id }}" class="vertical-form">
		{{ html_nonce('delete_message', iter) }}
		<p>{{ __('Are you sure you want to delete this message?') }}</p>
		<div>
			<button type="submit" class="button">{{ __('Remove message')  }}</button>
			<a href="forum.php?message={{ iter.id }}">{{ __('Back to thread') }}</a>
		</div>
	</form>
</div>
{% endblock %}