{% extends '@layout/layout_without_menu.twig' %}

{% block title __('Unsubscribe from %s')|format(subscription.mailinglist.naam) ~ ' :: ' ~ parent() %}

{% block content %}
<h1>{{ __('Mailing list') }}</h1>
<div class="messageBox">
	{% if not subscription.is_active %}
		<p>{{ __('You are no longer subscribed to the <em>%s</em> mailing list.')|format(subscription.mailinglist.naam|e('html'))|raw }}</p>
	{% else %}
	<form method="post" action="mailinglijsten.php?abonnement_id={{ subscription.id|e('url') }}">
		{{ html_nonce('unsubscribe', subscription) }}
		<p>{{ __('You are about to unsubscribe from the <em>%s</em> mailing list. Are you sure you want to continue?')|format(subscription.mailinglist.naam|e('html'))|raw }}</p>
		<button class="button" type="submit">{{ __('Unsubscribe me') }}</button>
		<a href="index.php" class="button">{{ __('No, I was just curious') }}</a>
	</form>
	{% endif %}
</div>
{% endblock %}