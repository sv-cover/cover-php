<div class="mailinglist-embed">
	<h2><?=markup_format_text($iter->get('naam'))?></h2>
	<p>
		<em><?=htmlspecialchars($iter->get('adres'))?>:</em>
		<?=markup_parse($iter->get('omschrijving'))?>
	</p>
	
	<form method="post" action="mailinglijsten.php?lijst_id=<?=$iter->get('id')?>">
