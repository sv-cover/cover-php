{% extends '@layout/layout.twig' %}

{% block content %}
<div class="modal is-static">
	<div class="modal-card">
		<form method="post" action="{{ controller.link_to_delete(iter) }}">
			{{ html_nonce('delete', iter) }}
			<header class="modal-card-head">
				<p class="modal-card-title">{{ __('Delete sticker') }}</p>
			</header>
			<section class="modal-card-body">
				<div class="field">
					<p>{{ __('Are you sure you want to delete this sticker?') }}</p>
				</div>
			</section>
			<footer class="modal-card-foot">
				<a href="{{ controller.link_to_next() }}" class="button" data-dismiss="modal">{{ __('Return to map') }}</a>
				<button type="submit" class="button is-danger">{{ __('Delete sticker') }}</button>
			</footer>
		</form>
	</div>
</div>
{% endblock %}