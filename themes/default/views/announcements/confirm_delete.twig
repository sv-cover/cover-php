{% extends '@layout/layout.twig' %}

{% block title __('Delete announcement') ~ ' â€“ ' ~ parent() %}

{% block content %}
<h1 class="title">{{ __('Delete announcement') }}</h1>
<form method="post" action="{{ controller.link_to_delete(iter) }}">
	{{ html_nonce('delete', iter) }}
    <div class="field">
    	<p>{{ __('Are you certain you want to delete the announcement <em>%s</em>?')|format(iter.subject|e('html'))|raw }}</p>
    </div>
	<div class="field">
        <div class="control buttons">
    		<button type="submit" class="button is-primary">{{ __('Delete announcement') }}</button>
    		<a href="{{ controller.link_to_read(iter) }}" class="button">{{ __('Back to announcement') }}</a>
        </div>
	</div>
</form>
{% endblock %}