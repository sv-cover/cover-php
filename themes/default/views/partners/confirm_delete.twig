{% extends '@layout/layout.twig' %}

{% block title __('Delete partner') ~ ' â€“ ' ~ parent() %}

{% block content %}
<div class="modal is-static">
    <div class="modal-card">
        <form method="post" action="{{ path('partners', {view: 'delete', id: iter.id}) }}">
            {{ html_nonce('delete', iter) }}
            <header class="modal-card-head">
                <p class="modal-card-title">{{ __('Delete partner') }}</p>
            </header>
            <section class="modal-card-body">
                <p>
                    {{ __('Are you sure you want to remove this partner?') }}
                    <em>{{ iter.name }}</em>
                </p>
            </section>
            <footer class="modal-card-foot">
                <a href="{{ path('partners', {id: iter.id}) }}" class="button" data-dismiss="modal">{{ __('Cancel') }}</a>
                <button type="submit" class="button is-danger">{{ __('Delete partner') }}</button>
            </footer>
        </form>
    </div>
</div>
{% endblock %}
