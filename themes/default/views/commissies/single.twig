{% extends '@layout/layout.twig' %}

{% block title %}
	{{ iter.naam }} :: {{ parent() }}
{% endblock %}

{% block content %}
{% set editable = global.models.Editable.get_iter(iter.page) %}
<div class="pageheading">
	{% if user_can_update iter %}
	<div class="controls inline">
		<a href="{{ controller.link_to_update(iter) }}" class="edit-link">{{ __('Wijzig commissie') }}</a>
	</div>
	{% endif %}
	<h1>{{ iter.naam }}</h1>
</div>
{% if iter.vacancies %}
	{{ include('_leden_gezocht.twig') }}
{% endif %}
<div class="committee-page messageBox">
	{{ include('_foto.twig') }}

	{{ include('_contact.twig') }}

	<div class="content">
		{% if user_can_update editable %}
		<div class="controls inline">
			<a href="{{ link('editable.update', editable=editable) }}" class="edit-link">{{ __('Bewerk commissiepagina') }}</a>
		</div>
		{% endif %}
		
		{{ editable.get_content|parse_editable }}

		{{ include('_leden.twig') }}

		{{ include('_agenda.twig') }}
	</div>
</div>

{{ include ('_navigation.twig') }}
{% endblock %}