{% if global.auth.logged_in %}
<div class="navbar-item has-dropdown is-hoverable-desktop">
    <a class="navbar-link is-arrowless" tabindex="0">
        <span class="icon">
            <i class="fas fa-user"></i>
            <span class="is-sr-only">
                {{ __('User') }}
            </span>
        </span>
    </a>
    <div class="navbar-dropdown is-right">
        {% if global.auth.logged_in %}
            {% if global.identity.can_impersonate %}
                <a class="navbar-item" href="{{ link('sessions.overrides', referrer=global.server.REQUEST_URI) }}" data-popup="modal">
                    {{ __('Impersonateâ€¦') }}
                </a>
                <hr class="navbar-divider">
            {% endif %}

            <div class="navbar-item">
                {{ __('Logged in') }}: {{ global.identity.member.voornaam }}
            </div>
            <a class="navbar-item" href="{{ link('profiel.read', member=global.identity.member) }}">
                {{ __('Profile') }}
            </a>
            <a class="navbar-item" href="{{ link('sessions.logout', referrer=global.server.REQUEST_URI) }}">
                {{ __('Logout') }}
            </a>
            <hr class="navbar-divider">
            <form class="navbar-item">
                <div class="field">                        
                    {{ __('Dark mode') }}
                    <input id="dark-mode-switch" type="checkbox" name="dark-mode-switch" class="switch is-small is-rounded dark-mode-switch" {{ view.layout.color_mode == 'dark' ? 'checked' : ''}}>
                    <label for="dark-mode-switch"><span class="is-sr-only">{{ __('Toggle dark mode') }}</span></label>
                </div>
            </form>
        {% endif %}
    </div>
</div>
{% else %}
    <a class="navbar-item" href="{{ link('sessions.login', referer=global.server.REQUEST_URI) }}">
        {{ __('Log in') }}
    </a>
{% endif %}
