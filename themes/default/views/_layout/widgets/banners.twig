{% if global.models.Banner.main_sponsors|length > 0 %}
	<h4>{{ __N('Main partner', 'Main partners', global.models.Banner.main_sponsors|length) }}</h4>
	{% for banner in global.models.Banner.main_sponsors %}
		<a href="{{ banner.url }}" target="_blank">
			<img src="images/banners/{{ banner.filename }}">
		</a>
		<br>
		<br>
	{% endfor %}
{% endif %}

{% if global.models.Banner.partners|length > 0 %}
	<h4>{{ __N('Partner', 'Partners', global.models.Banner.partners|length) }}</h4>
